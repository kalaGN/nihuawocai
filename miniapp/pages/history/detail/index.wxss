.detail-container {
  min-height: 100vh;
  background: #f5f7fa;
}

/* 顶部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.back-btn {
  font-size: 40rpx;
  color: #333;
  width: 80rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.placeholder {
  width: 80rpx;
}

/* 基本信息 */
.info-section {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.info-value.success {
  color: #2ecc71;
}

/* 成绩统计 */
.stats-section {
  display: flex;
  gap: 20rpx;
  margin: 0 20rpx 20rpx;
}

.stat-card {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
}

.stat-card.correct {
  border-left: 4rpx solid #2ecc71;
}

.stat-card.skip {
  border-left: 4rpx solid #f39c12;
}

.stat-card.total {
  border-left: 4rpx solid #667eea;
}

.stat-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 详细记录 */
.details-section {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.details-list {
  max-height: 800rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-left {
  width: 60rpx;
}

.detail-index {
  width: 48rpx;
  height: 48rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}

.detail-center {
  flex: 1;
  margin: 0 20rpx;
}

.detail-word {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.detail-category {
  font-size: 24rpx;
  color: #999;
}

.detail-right {
  text-align: right;
}

.detail-result {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.detail-result.correct {
  color: #2ecc71;
}

.detail-result.skip {
  color: #f39c12;
}

.detail-result.timeout {
  color: #ff6b6b;
}

.detail-time {
  font-size: 24rpx;
  color: #999;
}
