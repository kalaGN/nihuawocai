.result-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

/* 最佳徽章 */
.best-badge {
  text-align: center;
  font-size: 36rpx;
  color: #ffd700;
  font-weight: bold;
  margin-bottom: 20rpx;
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

/* 成绩头部 */
.result-header {
  text-align: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.result-score {
  font-size: 120rpx;
  font-weight: bold;
  color: #667eea;
  line-height: 1;
  margin-bottom: 20rpx;
}

.result-score-label {
  font-size: 28rpx;
  color: #999;
}

/* 详细数据 */
.stats-section {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 最佳成绩 */
.best-score-section {
  background: rgba(255, 215, 0, 0.2);
  border: 2rpx solid rgba(255, 215, 0, 0.5);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.best-score-title {
  font-size: 28rpx;
  color: #fff;
  margin-bottom: 12rpx;
}

.best-score-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffd700;
}

/* 操作按钮 */
.action-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.primary-btn {
  background: linear-gradient(135deg, #48dbfb 0%, #0abde3 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(10, 189, 227, 0.3);
}

.secondary-btn {
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
}

.share-btn {
  background: linear-gradient(135deg, #feca57 0%, #ff9ff3 100%);
  color: #fff;
}

/* 返回首页 */
.home-btn {
  text-align: center;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  padding: 20rpx;
  text-decoration: underline;
}

/* 没有数据 */
.no-data {
  min-height: 80vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.no-data-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
}
