.launch-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 100rpx 60rpx 80rpx;
  box-sizing: border-box;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-top: 80rpx;
}

.logo-icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
}

.app-name {
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 功能介绍 */
.features {
  display: flex;
  justify-content: space-around;
  margin: 60rpx 0;
}

.feature-item {
  text-align: center;
}

.feature-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.feature-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 授权区域 */
.auth-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-btn {
  width: 100%;
  height: 96rpx;
  background: #fff;
  color: #667eea;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.auth-btn[disabled] {
  opacity: 0.6;
}

.skip-btn {
  margin-top: 32rpx;
  padding: 20rpx 40rpx;
}

.skip-btn text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  text-decoration: underline;
}

.tip-text {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  text-align: center;
}
