.prepare-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  box-sizing: border-box;
}

/* 配置信息 */
.config-info {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
}

.config-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.config-items {
  display: flex;
  justify-content: space-around;
}

.config-item {
  text-align: center;
}

.config-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.config-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #667eea;
}

/* 倒计时 */
.countdown-section {
  text-align: center;
  margin: 80rpx 0;
}

.countdown-text {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 40rpx;
}

.countdown-number {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 120rpx;
  font-weight: bold;
  color: #667eea;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.countdown-tip {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 40rpx;
}

/* 提示 */
.tips-section {
  width: 100%;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.tip-item {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 48rpx;
  text-align: center;
}

/* 取消按钮 */
.cancel-btn {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  padding: 20rpx 40rpx;
  text-decoration: underline;
}
