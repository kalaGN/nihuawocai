/* pages/about/index.wxss */
.about-container {
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.app-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
}

.version {
  font-size: 24rpx;
  color: #999999;
}

.section {
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 32rpx;
}

.features {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.feature-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.feature-info {
  display: flex;
  flex-direction: column;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #999999;
}

.desc-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 48rpx;
  margin-bottom: 12rpx;
}

.footer {
  text-align: center;
  margin-top: 80rpx;
}

.copyright {
  font-size: 24rpx;
  color: #999999;
}
